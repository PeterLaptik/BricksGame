<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainScores" android:background="@android:color/black" android:orientation="vertical"
>

    <TextView
            android:text="@string/strHighScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textHighScoresView" app:fontFamily="@font/zxspectrum"
            android:textColor="@android:color/background_light" android:textSize="16sp" android:gravity="center"
            android:layout_marginTop="64dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/resScoreTable"
            android:layout_marginTop="32dp"/>
</LinearLayout>